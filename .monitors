#!/bin/sh

SELECTION=$(echo -e 'all\nint\next\noff' | dmenu -i -p "1ext/1int/2mon/off" -fn Terminus)

case $SELECTION in
ext)
	xrandr --output LVDS-1 --off --output VGA-1 --auto --output HDMI-1 --auto --output DP-1 --auto --output HDMI-2 --auto --output HDMI-3 --auto --output DP-2 --auto --output DP-3 --auto
;;
int)
	xrandr --output LVDS-1 --auto --output VGA-1 --off --output HDMI-1 --off --output DP-1 --off --output HDMI-2 --off --output HDMI-3 --off --output DP-2 --off --output DP-3 --off
;;
all)
	xrandr --output LVDS-1 --primary --auto --output VGA-1 --auto --above LVDS-1 --output HDMI-1 --auto --output DP-1 --auto --above LVDS-1 --output HDMI-2 --auto --above LVDS-1 --output HDMI-3 --auto --above LVDS-1 --output DP-2 --auto --above LVDS-1 --output DP-3 --auto --above LVDS-1 
;;
off)
	xrandr --output LVDS-1 --off --output VGA-1 --off --output HDMI-1 --off --output DP-1 --off --output HDMI-2 --off --output HDMI-3 --off --output DP-2 --off --output DP-3 --off
;;
*)
	echo "\_('_')_/"
;;
esac
